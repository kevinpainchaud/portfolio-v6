{
    "name": "portfolio-v6",
    "version": "1.0.2",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kevinpainchaud/portfolio-v6.git"
    },
    "author": "KÃ©vin Painchaud",
    "bugs": {
        "url": "https://github.com/kevinpainchaud/portfolio-v6/issues"
    },
    "scripts": {
        "start": "webpack serve --mode \"development\"",
        "build": "webpack --profile --json > stats.json",
        "postbuild": "react-snap",
        "lint": "eslint src/**/*.js",
        "serve": "serve dist",
        "analyze-bundle": "webpack-bundle-analyzer stats.json ./dist",
        "fetch-linkedin": "python3 ./tools/fetch-linkedin.py",
        "docker:start": "docker-compose -f ./docker/docker-compose.yml run --service-ports --rm start",
        "docker:build": "docker-compose -f ./docker/docker-compose.yml run --rm build",
        "docker:serve": "docker-compose -f ./docker/docker-compose.yml run --service-ports --rm serve",
        "docker:fetch-linkedin": "docker-compose -f ./docker/docker-compose.yml run --rm fetch-linkedin"
    },
    "reactSnap": {
        "source": "dist",
        "minifyHtml": {
            "collapseWhitespace": true,
            "removeComments": true
        },
        "puppeteerArgs": [
            "--no-sandbox",
            "--disable-setuid-sandbox"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.12.13",
        "@babel/plugin-proposal-class-properties": "^7.12.13",
        "@babel/preset-env": "^7.12.13",
        "@babel/preset-react": "^7.12.13",
        "babel-loader": "^8.2.2",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^7.0.0",
        "css-loader": "^5.0.1",
        "eslint": "^7.19.0",
        "eslint-plugin-react": "^7.22.0",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.0.0",
        "image-webpack-loader": "^7.0.1",
        "node-sass": "^5.0.0",
        "react-snap": "^1.23.0",
        "sass-loader": "^11.0.0",
        "serve": "^11.3.2",
        "style-loader": "^2.0.0",
        "svg-sprite-loader": "^5.2.1",
        "webpack": "^5.21.1",
        "webpack-bundle-analyzer": "^4.4.0",
        "webpack-cli": "^4.5.0",
        "webpack-dev-server": "^3.11.2"
    },
    "dependencies": {
        "mitt": "^2.1.0",
        "polished": "^4.1.0",
        "preact": "^10.5.12",
        "preact-helmet": "^4.0.0-alpha-3",
        "preact-router": "^3.2.1",
        "react-lazy-load-image-component": "^1.5.1",
        "react-photoswipe": "^1.3.0",
        "styled-components": "^4.4.1",
        "styled-normalize": "^8.0.7",
        "subscribe-ui-event": "^2.0.7"
    }
}
