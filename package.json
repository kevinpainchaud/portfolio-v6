{
    "name": "portfolio-v6",
    "version": "1.0.2",
    "repository": {
        "type": "git",
        "url": "git+https://gitlab.com/kevinpainchaud/portfolio-v6.git"
    },
    "author": "KÃ©vin Painchaud",
    "bugs": {
        "url": "https://gitlab.com/kevinpainchaud/portfolio-v6/issues"
    },
    "scripts": {
        "start": "webpack-dev-server",
        "build": "webpack --mode production --profile --json > stats.json",
        "postbuild": "react-snap",
        "lint": "eslint .",
        "serve": "serve dist",
        "analyze-bundle": "webpack-bundle-analyzer stats.json ./dist",
        "fetch-linkedin": "python3 ./tools/fetch-linkedin.py",
        "docker:start": "docker-compose -f ./docker/docker-compose.yml run --service-ports --rm start",
        "docker:build": "docker-compose -f ./docker/docker-compose.yml run --rm build",
        "docker:serve": "docker-compose -f ./docker/docker-compose.yml run --service-ports --rm serve",
        "docker:fetch-linkedin": "docker-compose -f ./docker/docker-compose.yml run --rm fetch-linkedin"
    },
    "reactSnap": {
        "source": "dist",
        "minifyHtml": {
            "collapseWhitespace": true,
            "removeComments": true
        },
        "puppeteerArgs": [
            "--no-sandbox",
            "--disable-setuid-sandbox"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/preset-env": "^7.9.0",
        "@babel/preset-react": "^7.9.1",
        "babel-loader": "^8.1.0",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^5.1.1",
        "css-loader": "^3.4.2",
        "eslint": "^6.8.0",
        "eslint-plugin-react": "^7.19.0",
        "file-loader": "^4.3.0",
        "html-webpack-plugin": "^3.2.0",
        "image-webpack-loader": "^6.0.0",
        "node-sass": "^4.13.1",
        "react-snap": "^1.23.0",
        "sass-loader": "^8.0.2",
        "serve": "^11.3.0",
        "style-loader": "^1.1.3",
        "svg-sprite-loader": "^4.2.1",
        "webpack": "^4.42.0",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.10.3"
    },
    "dependencies": {
        "@datapunt/matomo-tracker-react": "0.0.16",
        "mitt": "^1.2.0",
        "polished": "^3.5.0",
        "preact": "^10.3.4",
        "preact-helmet": "^4.0.0-alpha-3",
        "preact-router": "^3.2.1",
        "react-lazy-load-image-component": "^1.4.1",
        "react-photoswipe": "^1.3.0",
        "styled-components": "^4.4.1",
        "styled-normalize": "^8.0.7",
        "subscribe-ui-event": "^2.0.6",
        "webpack-bundle-analyzer": "^3.6.1"
    }
}
